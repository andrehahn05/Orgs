<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/prod_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/prod_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/prod_item_name"
        app:layout_constraintStart_toStartOf="@id/prod_item_name"
        app:layout_constraintTop_toBottomOf="@id/prod_item_name"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/prod_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="22.59"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/prod_item_name"
        app:layout_constraintStart_toStartOf="@id/prod_item_name"
        app:layout_constraintTop_toBottomOf="@id/prod_item_description"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/prod_item_name"
        app:srcCompat="@drawable/product_01"
        tools:srcCompat="@drawable/product_01"
        android:contentDescription="imagem produto" />

</androidx.constraintlayout.widget.ConstraintLayout>